generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String  @id @default(cuid())
  name    String  @unique
  target  String  // e.g., "3 horas", "45 min"
  enabled Boolean @default(true)
  color   String  // Hex color code
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([enabled])
  @@map("categories")
}

model Log {
  id          String   @id @default(cuid())
  timestamp   String   // Formatted display string
  dateObj     DateTime // For querying and filtering
  eventName   String
  category    String   // Category name (string reference) - KEEP for now as fallback/display
  categoryId  String?  // New Foreign Key
  
  intensity   Int      @default(1)
  status      String   @default("COMPLETED")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dateObj])
  @@index([category])
  @@index([status])
  @@map("logs")
}
